---
import Layout from "../../layouts/Layout.astro";
import { ownerRez } from "../../lib/ownerRez";
import type {
  OwnerRezListing,
  OwnerRezProperty,
} from "../../lib/ownerRezTypes";

export async function getStaticPaths() {
  // Fetch all listings to generate paths
  const response = await ownerRez.getListings(true);

  // Generate a path for each listing
  // We pre-fetch the property details here to pass as props during build
  const paths = await Promise.all(
    response.items.map(async (listing) => {
      // Fetch additional administrative details (address, lat/long, etc)
      const propertyDetails = await ownerRez.getProperty(listing.property_id);

      // Merge listing (marketing data) and property (admin data)
      const fullProperty = { ...listing, ...propertyDetails };

      return {
        params: { id: listing.property_id.toString() },
        props: { property: fullProperty },
      };
    }),
  );

  return paths;
}

// Define the merged type for Props
type MergedProperty = OwnerRezListing & OwnerRezProperty;

interface Props {
  property: MergedProperty;
}

const { property } = Astro.props;

// Formatting helpers
const formatCurrency = (amount: number) => {
  return new Intl.NumberFormat("en-US", {
    style: "currency",
    currency: property.currency_code || "USD",
  }).format(amount);
};

const heroImage =
  property.photos && property.photos.length > 0
    ? property.photos[0].large_url
    : "";
const otherPhotos =
  property.photos && property.photos.length > 1
    ? property.photos.slice(1, 6)
    : []; // Show next 5 photos
---

<Layout>
  <main class="font-sans text-gray-700">
    {/* Hero Section */}
    <div class="relative h-[60vh] w-full overflow-hidden bg-gray-900">
      {
        heroImage ? (
          <img
            src={heroImage}
            alt={property.descriptions.headline}
            class="w-full h-full object-cover opacity-90"
          />
        ) : (
          <div class="flex items-center justify-center h-full text-white">
            No Image Available
          </div>
        )
      }
    </div>
  </main>

  <div
    class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-6 grid grid-cols-1 lg:grid-cols-3 gap-12"
  >
    {/* Left Output: Main Content */}
    <div class="lg:col-span-2 space-y-6">
      {/* Header Info (Moved) */}
      <section class="space-y-2">
        <h4
          class="text-lg md:text-xl pb-2 font-semibold text-gray-600 leading-tight"
        >
          {property.descriptions.headline}
        </h4>

        <div class="flex flex-wrap gap-4 text-gray-600 text-md items-center">
          <span class="font-medium text-gray-900"
            >{property.address.city}, {property.address.state}</span
          >
          <span class="hidden sm:inline w-1.5 h-1.5 rounded-full bg-gray-300"
          ></span>

          <span class="flex items-center gap-1">
            <span>{property.bedroom_count}</span>
            <span class="text-gray-500">Bedrooms</span>
          </span>
          <span class="hidden sm:inline w-1.5 h-1.5 rounded-full bg-gray-300"
          ></span>

          <span class="flex items-center gap-1">
            <span>{property.bathroom_count}</span>
            <span class="text-gray-500">Bathrooms</span>
          </span>
          <span class="hidden sm:inline w-1.5 h-1.5 rounded-full bg-gray-300"
          ></span>

          <span class="flex items-center gap-1">
            <span class="text-gray-500">Sleeps</span>
            <span>{property.sleeps_max}</span>
          </span>
        </div>

        <div
          class="flex flex-col sm:flex-row gap-8 py-2 border-y border-gray-100"
        >
          <div>
            <span
              class="block text-sm font-bold text-gray-600 uppercase tracking-wider mb-1"
              >Check-in: {property.check_in || "4:00 PM"}</span
            >
          </div>
          <div>
            <span
              class="block text-sm font-bold text-gray-600 uppercase tracking-wider mb-1"
              >Check-out: {property.check_out || "10:00 AM"}</span
            >
          </div>
        </div>

        {/* Featured Amenities */}
        <div class="flex flex-wrap gap-3">
          {
            property.amenity_call_outs?.map((amenity) => (
              <div class="flex items-center gap-3 text-gray-700 bg-gray-50 p-3 rounded-lg border border-gray-100/50">
                <i
                  class={`${amenity.icon} text-primary text-xl w-6 text-center`}
                />
                <span class="font-medium">
                  {amenity.text.replace(/&ndash;/g, "-")}
                </span>
              </div>
            ))
          }
        </div>
      </section>

      <hr class="my-6 border-gray-100" />
      {/* Description */}
      <section>
        <h2
          class="text-2xl font-bold text-gray-900 mb-4 border-l-4 border-primary pl-4"
        >
          About this Property
        </h2>
        <div
          class="prose prose-lg text-gray-600 leading-relaxed whitespace-pre-line"
        >
          {property.descriptions.description}
        </div>
      </section>

      <hr class="my-6 border-gray-100" />
      {/* Amenities */}
      <section>
        <h2
          class="text-2xl font-bold text-gray-900 mb-6 border-l-4 border-primary pl-4"
        >
          Amenities
        </h2>
        <div class="border border-gray-200 rounded-lg overflow-hidden">
          {
            property.amenity_categories.map((category, index) => (
              <div
                class={`flex flex-col sm:flex-row border-b border-gray-200 last:border-b-0 ${
                  index % 2 === 0 ? "bg-white" : "bg-gray-50"
                }`}
              >
                <div class="sm:w-1/3 py-1 px-4 font-bold text-gray-900 border-b sm:border-b-0 sm:border-r border-gray-200 bg-gray-50/50">
                  {category.caption}
                </div>
                <div class="sm:w-2/3 py-1 px-4 text-gray-700">
                  <ul
                    class={`grid gap-2 text-sm ${
                      ["Bathrooms", "Where you'll sleep"].includes(
                        category.caption,
                      )
                        ? "grid-cols-1"
                        : "grid-cols-2 md:grid-cols-3 lg:grid-cols-4"
                    }`}
                  >
                    {category.amenities.map((amenity) => (
                      <li class="flex items-center gap-1">
                        <span class="w-1.5 h-1.5 rounded-full bg-primary flex-shrink-0" />
                        <span>{amenity.text.replace(/&ndash;/g, "-")}</span>
                      </li>
                    ))}
                  </ul>
                </div>
              </div>
            ))
          }
        </div>
      </section>

      <hr class="my-6 border-gray-100" />
      {/* Rates */}
      <section>
        <h2
          class="text-2xl font-bold text-gray-900 mb-6 border-l-4 border-primary pl-4"
        >
          Rates
        </h2>
        <div class="overflow-hidden border border-gray-200 rounded-lg mb-6">
          <table class="min-w-full divide-y divide-gray-200">
            <thead class="bg-gray-50">
              <tr>
                <th
                  scope="col"
                  class="px-6 py-3 text-left text-xs font-bold text-gray-500 uppercase tracking-wider"
                >
                  Season
                </th>
                <th
                  scope="col"
                  class="px-6 py-3 text-left text-xs font-bold text-gray-500 uppercase tracking-wider"
                >
                  Nightly Rate
                </th>
              </tr>
            </thead>
            <tbody class="bg-white divide-y divide-gray-200">
              <tr>
                <td
                  class="px-6 py-4 whitespace-nowrap text-sm font-medium text-gray-900"
                >
                  Standard Rate
                </td>
                <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500">
                  {formatCurrency(property.nightly_rate_min)} - {
                    formatCurrency(property.nightly_rate_max)
                  }
                </td>
              </tr>
            </tbody>
          </table>
        </div>

        <div class="bg-gray-50 p-6 rounded-lg border border-gray-200">
          <h3 class="font-bold text-gray-900 mb-2">Cancellation Policy</h3>
          <p class="text-gray-700 whitespace-pre-line">
            {property.cancellation_policy}
          </p>
        </div>
      </section>

      {/* Gallery Preview */}
      {
        otherPhotos.length > 0 && (
          <hr class="my-6 border-gray-100" />
          <section>
            <h2 class="text-2xl font-bold text-gray-900 mb-6 border-l-4 border-primary pl-4">
              Photo Gallery
            </h2>
            <div class="grid grid-cols-2 md:grid-cols-3 gap-4">
              {otherPhotos.map((photo) => (
                <div class="aspect-square rounded-xl overflow-hidden shadow-sm hover:shadow-md transition">
                  <img
                    src={photo.large_url}
                    alt={photo.caption}
                    class="w-full h-full object-cover hover:scale-105 transition-transform duration-500"
                    loading="lazy"
                  />
                </div>
              ))}
            </div>
          </section>
        )
      }

      <hr class="my-6 border-gray-100" />
      <!-- TrulyVacations_Book -->
      <!-- OwnerRez Booking/Inquiry widget for Mountain Valley Escape -->
      <section id="book-now">
        <h2
          class="text-2xl font-bold text-gray-900 mb-6 border-l-4 border-primary pl-4"
        >
          Book Now
        </h2>
        <div
          class="ownerrez-widget p-2"
          data-propertyId="7d667893b0e444e8959f4c61cc99f327"
          data-widget-type="TrulyVacations_Book - Booking/Inquiry"
          data-widgetId="337a4cff-81d2-4a47-bf0e-3341f5b6625d"
        >
        </div>
        <script src="https://app.ownerrez.com/widget.js" is:inline></script>
      </section>
    </div>

    {/* Right Output: Sidebar (Booking & Map) */}
    <div class="space-y-8">
      {/* Booking Card */}
      <div
        class="bg-white p-6 rounded-2xl shadow-xl border border-gray-100 sticky top-24"
      >
        <div class="mb-6">
          <p class="text-gray-500 text-sm font-medium uppercase tracking-wider">
            Starting at
          </p>
          <div class="flex items-baseline gap-1">
            <span class="text-3xl font-bold text-primary"
              >{formatCurrency(property.nightly_rate_min)}</span
            >
            <span class="text-gray-400">/ night</span>
          </div>
        </div>

        <div class="space-y-3">
            <a
              href="#book-now"
              class="block w-full text-center bg-primary text-white font-bold py-3 px-4 rounded-xl hover:bg-green-600 transition shadow-lg hover:shadow-xl transform hover:-translate-y-0.5"
            >
              Check Availability
            </a>
            <a
              href="#book-now"
              class="block w-full text-center bg-white text-gray-700 font-bold py-3 px-4 rounded-xl border-2 border-gray-200 hover:border-primary hover:text-primary transition"
            >
              Ask a Question
            </a>
        </div>

        <hr class="my-6 border-gray-100" />

        <!-- MVE-MonthCalendar -->
        <!-- OwnerRez Single Month Calendar widget for Mountain Valley Escape -->
        <div
          class="ownerrez-widget"
          data-propertyId="7d667893b0e444e8959f4c61cc99f327"
          data-widget-type="MVE-MonthCalendar - Single Month Calendar"
          data-widgetId="86cdf0f243904daca051ffe2632a04f7"
        >
        </div>
        <script src="https://app.ownerrez.com/widget.js" is:inline></script>
      </div>

      {/* Map Placeholder */}
      <div
        class="bg-gray-100 rounded-2xl p-4 h-64 flex items-center justify-center text-gray-400"
      >
        <div class="text-center">
          <p class="mb-2 font-semibold">Location</p>
          <p class="text-xs">
            {property.address.city}, {property.address.state}
          </p>
          {
            /* Map integration could go here using property.latitude/longitude */
          }
        </div>
      </div>
    </div>
  </div>
</Layout>
