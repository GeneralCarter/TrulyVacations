---
import strapi from "../lib/strapi";
import Layout from "../layouts/Layout.astro";
import Carousel from "../components/Carousel.astro";

const posts = await strapi.collection("posts").find();
---

<Layout>
	<main>
		<Carousel />
		<ul>
			{
				posts.data.map((post) => (
					<li>
						<a href={`/blog/${post.slug}/`}>{post.Title}</a>
					</li>
				))
			}
		</ul>
	</main>
</Layout>
