---
import { Image } from "astro:assets";
import logo from "../assets/Color logo - no background.svg";
---

<header
  id="main-navbar"
  class="fixed top-0 left-0 right-0 z-50 px-4 py-4 transition-transform duration-300 ease-in-out flex justify-center"
>
  <nav
    class="w-full max-w-5xl bg-primary/50 backdrop-blur-md shadow-lg rounded-2xl border border-gray-200/50"
  >
    <!-- Navbar Content: logo, links, buttons, etc. -->
    <div class="px-6 py-2 flex justify-between items-center">
      <a href="/" class="flex items-center gap-2 group" title="Truly Vacations">
        <div class="relative overflow-hidden rounded-xl">
          <Image
            src={logo}
            alt="Truly Vacations Logo"
            class="h-10 w-auto transform transition-transform group-hover:scale-105"
          />
        </div>
        <span
          class="font-bold text-xl tracking-tight text-gray-900 hidden sm:block"
          >TrulyVacations</span
        >
      </a>
      <div class="hidden md:flex items-center gap-1">
        <a
          href="/"
          class="px-4 py-2 text-sm font-medium text-gray-700 hover:text-blue-600 hover:bg-blue-50 rounded-lg transition-colors"
          >Home</a
        >
        <a
          href="/properties"
          class="px-4 py-2 text-sm font-medium text-gray-700 hover:text-blue-600 hover:bg-blue-50 rounded-lg transition-colors"
          >Properties</a
        >
        <a
          href="/destinations"
          class="px-4 py-2 text-sm font-medium text-gray-700 hover:text-blue-600 hover:bg-blue-50 rounded-lg transition-colors"
          >Destinations</a
        >
        <a
          href="/blog"
          class="px-4 py-2 text-sm font-medium text-gray-700 hover:text-blue-600 hover:bg-blue-50 rounded-lg transition-colors"
          >Blog</a
        >
      </div>
      <div class="md:hidden">
        <!-- Mobile menu button placeholder -->
        <button class="text-gray-500 hover:text-gray-700 p-2">
          <span class="sr-only">Open menu</span>
          <svg
            class="w-6 h-6"
            fill="none"
            stroke="currentColor"
            viewBox="0 0 24 24"
            ><path
              stroke-linecap="round"
              stroke-linejoin="round"
              stroke-width="2"
              d="M4 6h16M4 12h16M4 18h16"></path></svg
          >
        </button>
      </div>
    </div>
  </nav>
</header>

<script>
  let lastScrollY = window.scrollY;
  const navbar = document.getElementById("main-navbar");

  window.addEventListener("scroll", () => {
    if (!navbar) return;

    const currentScrollY = window.scrollY;

    // Determine scroll direction
    if (currentScrollY > lastScrollY && currentScrollY > 50) {
      // Scrolling down & passed top threshold - hide navbar
      navbar.classList.add("-translate-y-full");
    } else {
      // Scrolling up or at top - show navbar
      navbar.classList.remove("-translate-y-full");
    }

    lastScrollY = currentScrollY;
  });
</script>
