---
import { Image } from "astro:assets";
import logo from "../assets/Color logo with background.svg";
---

<header class="fixed top-0 left-0 right-0 z-50 px-10 py-4">
  <nav class="bg-color shadow-lg rounded-2xl border-2 border-gray-300">
    <!-- Navbar Content: logo, links, buttons, etc. -->
    <div class="container mx-auto px-1 py-2 flex justify-between items-center">
      <a href="/" class="flex items-center" title="Truly Vacations">
        <Image
          src={logo}
          alt="Truly Vacations Logo"
          class="h-10 rounded-2xl w-auto"
        />
      </a>
      <div>
        <a href="/home" class="px-3 py-2">Home</a>
        <a href="/about" class="px-3 py-2">About</a>
        <a href="/contact" class="px-3 py-2">Contact</a>
      </div>
    </div>
  </nav>
</header>
